{% extends 'clientes/layout.twig' %}

{% block body %}

	<div class="ui one column grid">
  <h1 class="ui header">Atualizar cliente</h1>
		<div class="column">
			<form class="ui form" action="/atualizar" method="post">
      <input type="text" name="id" value="{{cliente.id}}" hidden>
				<div class="field">
					<label>Nome</label>
					<input type="text" name="nome" placeholder="Nome" value="{{cliente.nome}}">
				</div>
				<div class="field">
					<label>Endereco</label>
					<input type="text" name="endereco" placeholder="endereco" value="{{cliente.endereco}}">
				</div>
				<div class="field">
					<label>Bairro</label>
					<input type="text" name="bairro" placeholder="Bairro" value="{{cliente.bairro}}">
				</div>
				<div class="field">
					<label>CEP</label>
					<input type="text" name="cep" placeholder="CEP" value="{{cliente.cep}}">
				</div>
				<div class="field">
					<label>Cidade</label>
					<input type="text" name="cidade" placeholder="Cidade" value="{{cliente.cidade}}">
				</div>
				<div class="field">
					<label>Estado</label>
					<input type="text" name="estado" placeholder="Estado" value="{{cliente.estado}}">
				</div>
				<div class="field">
					<label>Observacao</label>
					<input type="text" name="observacao" placeholder="observacao" value="{{cliente.observacao}}">
				</div>
				<button class="ui button envio" type="submit">Enviar</button>
			</form>
		</div>
	</div>

{% endblock %}
